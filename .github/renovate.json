{
  "extends": [
    "github>doist/renovate-config:kotlin-base"
  ],
  "packageRules": [
    {
      "groupName": "io.gitlab.arturbosch.detekt:*",
      "matchPackageNames": [
        "io.gitlab.arturbosch.detekt"
      ],
      "matchPackagePrefixes": [
        "io.gitlab.arturbosch.detekt:"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ],
}
